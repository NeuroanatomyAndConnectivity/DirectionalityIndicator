#version 330

in vec4 v_color;

out vec4 fragColor;

void main()
{
    // Write
    fragColor = v_color;
    fragColor = vec4( 1.0, 0.0, 0.0, 1.0 );

    // Small depth offset ?
    gl_FragDepth = gl_FragCoord.z - 0.01;
}

